{
  "name": "@brnrdog/listbox",
  "version": "2.0.0",
  "description": "React hooks written in ReScript for building accessible listbox components",
  "repository": "git://github.com/brnrdog/listbox.git",
  "types": "./src/Listbox.d.ts",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --collect-coverage",
    "build": "bsb -make-world",
    "clean": "bsb -clean-world",
    "start": "bsb -make-world -w",
    "docs:start": "cd docs && yarn start",
    "docs:build": "cd docs && yarn build"
  },
  "main": "src/Listbox.bs.js",
  "keywords": [
    "rescript",
    "react",
    "listbox",
    "select",
    "dropdown"
  ],
  "author": "Bernardo Gurgel <brnrdog@hey.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.1"
  },
  "devDependencies": {
    "@drewschrauf/bs-user-event": "^0.1.1",
    "@glennsl/bs-jest": "^0.5.1",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.1",
    "bs-dom-testing-library": "^0.6.2",
    "bs-jest-dom": "^4.1.1",
    "bs-platform": "8.3.0",
    "bs-react-testing-library": "^0.7.3",
    "bs-webapi": "^0.19.1",
    "gentype": "^3.35.0",
    "jest": "^26.4.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-hooks-testing-library": "^0.6.0",
    "reason-react": "^0.9.1",
    "semantic-release": "^17.2.1",
    "typescript": "^4.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.bs.js",
      "!<rootDir>/src/Controls/Controls_DropdownListbox.bs.js",
      "!<rootDir>/src/__tests__/**/*.bs.js"
    ]
  }
}
